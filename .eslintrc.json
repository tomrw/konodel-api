{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended"
	],
	"env": {
		"node": true,
		"es6": true,
		"mocha": true
	},
	"rules": {
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			2,
			"single"
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"semi": [
			2,
			"always"
		],
		"eol-last": 2,
		"newline-after-var": [
			2,
			"always"
		],
		"vars-on-top": 2,
		"no-unused-vars": 2,
		"no-console": 1,
		"no-alert": 2,
		"no-multi-spaces": 2,
		"no-multiple-empty-lines": [
			2,
			{
				"max": 1
			}
		],
		"space-infix-ops": 2,
		"object-curly-spacing": [ "error", "always" ],
		"space-before-blocks": "error",
		"key-spacing": [
			"error", {
				"beforeColon": false
			}
		],
		"space-before-function-paren": [
			"error", {
				"anonymous": "always",
				"named": "never"
			}
		],
		"comma-spacing": [
			"error", {
				"before": false,
				"after": true
			}
		],
		"newline-before-return": "error",
		"prefer-template": "error",
		"template-curly-spacing": [
			"error",
			"always"
		]
	}
}
